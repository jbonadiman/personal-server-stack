{
  "$schema": "./templates.schema.json",
  "version": "2",
  "templates": [
    {
      "type": 3,
      "title": "shiori",
      "description": "Shiori is a simple bookmarks manager written in Go language. Intended as a simple clone of Pocket. You can use it as command line application or as web application.",
      "name": "shiori",
      "categories": [
        "open-source",
        "self-hosted",
        "bookmarks"
      ],
      "platform": "linux",
      "env": [
        {
          "name": "SHIORI_DIR",
          "label": "Specifies Shiori data location"
        },
        {
          "name": "SHIORI_DBMS",
          "label": "Specifies which database engine to use",
          "select": [
            {
              "text": "MySQL",
              "value": "mysql"
            },
            {
              "text": "PostgreSQL",
              "value": "postgresql"
            },
            {
              "text": "SQLite",
              "value": "",
              "default": true
            }
          ]
        }
      ],
      "repository": {
        "url": "https://github.com/jbonadiman/seven-wonders-containers",
        "stackfile": "shiori/composer.yml"
      }
    }
  ]
}
